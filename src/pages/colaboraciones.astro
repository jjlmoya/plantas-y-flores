    // Validar campos requeridos manualmente
    const requiredFields = form.querySelectorAll('[required]');
    let hasErrors = false;
    
    requiredFields.forEach(field => {
      if (!field.value.trim()) {
        field.style.borderColor = '#dc3545';
        hasErrors = true;
        console.log('Campo requerido vac√≠o:', field.name);
      } else {
        field.style.borderColor = '#e5e7eb';
      }
    });
    
    if (hasErrors) {
      showError('Por favor, completa todos los campos obligatorios marcados con *');
      return;
    }
    
    // Mostrar estado de carga
    showLoading();
    console.log('Iniciando env√≠o a Google Sheets...');
    
    // Recopilar datos del formulario
    const formData = new FormData(form);
    const data = Object.fromEntries(formData.entries());
    
    // A√±adir timestamp
    data.timestamp = new Date().toLocaleString('es-ES', {
      timeZone: 'Europe/Madrid',
      year: 'numeric',
      month: '2-digit',
      day: '2-digit',
      hour: '2-digit',
      minute: '2-digit'
    });
    
    console.log('Datos a enviar:', data);
    
    try {
      console.log('Enviando a:', GOOGLE_SCRIPT_URL);
      
      // Intentar con URL params (m√©todo m√°s compatible)
      const params = new URLSearchParams();
      Object.keys(data).forEach(key => {
        params.append(key, data[key]);
      });

      console.log('Par√°metros a enviar:', params.toString());

      const response = await fetch(GOOGLE_SCRIPT_URL, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/x-www-form-urlencoded',
        },
        body: params.toString(),
        mode: 'no-cors'
      });
      
      console.log('Enviado con URLSearchParams');
      
      // Con no-cors no podemos leer la respuesta, asumimos √©xito
      showSuccess('Recibido. Respondo en un m√°ximo de 48 h.');
      form.reset();
    } catch (error) {
      console.error('Error completo:', error);
      showError('Hubo un problema al enviar tu mensaje. Error: ' + error.message + '. Por favor, int√©ntalo de nuevo.');
    } finally {
      hideLoading();
    }
  });
  
  function showLoading() {
    submitBtn.disabled = true;
    btnText.style.display = 'none';
    btnLoading.style.display = 'inline-flex';
    formStatus.style.display = 'none';
  }
  
  function hideLoading() {
    submitBtn.disabled = false;
    btnText.style.display = 'inline';
    btnLoading.style.display = 'none';
  }
  
  function showSuccess(message) {
    formStatus.textContent = message;
    formStatus.className = 'form-status success';
    formStatus.style.display = 'block';
    formStatus.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
  }
  
  function showError(message) {
    formStatus.textContent = message;
    formStatus.className = 'form-status error';
    formStatus.style.display = 'block';
    formStatus.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
  }
});
</script>