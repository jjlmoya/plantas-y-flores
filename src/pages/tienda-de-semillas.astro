  font-size: 1.2rem;
  max-width: 600px;
  margin: 0 auto;
  line-height: 1.6;
  opacity: 0.85;
}

.section-title {
  font-size: 2.5rem;
  font-weight: 700;
  color: #2d5016;
  text-align: center;
  margin: 0 0 3rem 0;
}

