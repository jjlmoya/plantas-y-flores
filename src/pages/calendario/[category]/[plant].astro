    'cotton': 'algod√≥n',
    'maize': 'ma√≠z',
    'corn': 'ma√≠z', 
    'legumes': 'leguminosas',
    'rosemary': 'romero',
    'sage': 'salvia',
    'onion': 'cebolla',
    'garlic': 'ajo',
    'celery': 'apio',
    'parsley': 'perejil',
    'oregano': 'or√©gano',
    'mint': 'menta',
