              {plantInfo.type && (
                <div class="char-item type">
                  <div class="char-icon">{
                    plantInfo.type === 'annual' ? '📅' :
                    plantInfo.type === 'perennial' ? '♾️' :
                    plantInfo.type === 'biennial' ? '📆' :
                    plantInfo.type === 'shrub' ? '🌳' :
                    plantInfo.type === 'tree' ? '🌲' : '🌱'
