      client:load
      ad-slot="7538264929"
      ad-type="native"
      container-class="section-divider-ad"
    />
    
    <!-- Categories Section -->
    <section class="medicine-categories">
      <h2 class="section-title">Categorías de Plantas Medicinales</h2>
      <div class="categories-grid">
        <div class="category-card digestive">
          <div class="category-icon">🫖</div>
          <h3>Digestivas</h3>
          <p>Para problemas estomacales, digestión lenta e inflamación gastrointestinal.</p>
          <ul class="plant-examples">
            <li>Manzanilla</li>
            <li>Menta</li>
            <li>Jengibre</li>
            <li>Hinojo</li>
          </ul>
        </div>
        
        <div class="category-card relaxing">
          <div class="category-icon">😌</div>
          <h3>Relajantes</h3>
          <p>Para ansiedad, estrés, insomnio y tensión nerviosa.</p>
          <ul class="plant-examples">
            <li>Lavanda</li>
            <li>Valeriana</li>
            <li>Melisa</li>
            <li>Tila</li>
          </ul>
        </div>
        
        <div class="category-card respiratory">
          <div class="category-icon">🫁</div>
          <h3>Respiratorias</h3>
          <p>Para tos, resfriados, congestión y problemas pulmonares.</p>
          <ul class="plant-examples">
            <li>Eucalipto</li>
            <li>Tomillo</li>
            <li>Salvia</li>
            <li>Gordolobo</li>
          </ul>
        </div>
        
        <div class="category-card healing">
          <div class="category-icon">🩹</div>
          <h3>Curativas</h3>
          <p>Para heridas, quemaduras, irritaciones cutáneas e inflamaciones.</p>
          <ul class="plant-examples">
            <li>Aloe Vera</li>
            <li>Caléndula</li>
            <li>Plantén</li>
            <li>Árnica</li>
          </ul>
        </div>
      </div>
    </section>

    <!-- Sidebar Ad para desktop -->
    <AdSenseAd 
      client:load
      ad-slot="8980721998"
      ad-type="sidebar"
      :width="300"
      :height="250"
      is-responsive="false"
      container-class="sidebar-ad"
    />

    <!-- Preparation Methods -->
    <section class="preparation-methods">
      <h2 class="section-title">Métodos de Preparación</h2>
      <div class="methods-grid">
        <div class="method-card">
          <div class="method-icon">🫖</div>
          <h4>Infusión</h4>
          <p><strong>Para:</strong> Hojas y flores</p>
          <p>Vierte agua hirviendo sobre la planta. Deja reposar 5-10 minutos tapado.</p>
        </div>
        
        <div class="method-card">
          <div class="method-icon">🔥</div>
          <h4>Decocción</h4>
          <p><strong>Para:</strong> Raíces, cortezas</p>
          <p>Hierve la planta en agua durante 10-20 minutos. Ideal para partes duras.</p>
        </div>
        
        <div class="method-card">
          <div class="method-icon">🧴</div>
          <h4>Tintura</h4>
          <p><strong>Para:</strong> Conservación larga</p>
          <p>Macera la planta en alcohol durante semanas. Concentración potente.</p>
        </div>
        
        <div class="method-card">
          <div class="method-icon">🧊</div>
          <h4>Cataplasma</h4>
          <p><strong>Para:</strong> Uso externo</p>
          <p>Aplasta hojas frescas y aplica directamente sobre la piel.</p>
        </div>
      </div>
    </section>

    <!-- Popular Medicinal Plants -->
    <section class="popular-plants">
      <h2 class="section-title">Plantas Medicinales Populares</h2>
      <div class="plants-showcase">
        <div class="showcase-card manzanilla">
          <div class="showcase-image">🌼</div>
          <div class="showcase-content">
            <h3>Manzanilla</h3>
            <p class="latin-name"><em>Matricaria chamomilla</em></p>
            <p class="properties">
              <strong>Propiedades:</strong> Antiinflamatoria, calmante, digestiva
            </p>
            <p class="uses">
              <strong>Usos:</strong> Insomnio, ansiedad, problemas digestivos, irritaciones cutáneas
            </p>
          </div>
        </div>
        
        <div class="showcase-card lavanda">
          <div class="showcase-image">💜</div>
          <div class="showcase-content">
            <h3>Lavanda</h3>
            <p class="latin-name"><em>Lavandula angustifolia</em></p>
            <p class="properties">
              <strong>Propiedades:</strong> Relajante, antiséptica, analgésica
            </p>
            <p class="uses">
              <strong>Usos:</strong> Estrés, insomnio, dolores de cabeza, quemaduras leves
            </p>
          </div>
        </div>
        
        <div class="showcase-card aloe">
          <div class="showcase-image">🌱</div>
          <div class="showcase-content">
            <h3>Aloe Vera</h3>
            <p class="latin-name"><em>Aloe barbadensis</em></p>
            <p class="properties">
              <strong>Propiedades:</strong> Cicatrizante, hidratante, antiinflamatoria
            </p>
            <p class="uses">
              <strong>Usos:</strong> Quemaduras, heridas, irritaciones, cuidado de la piel
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- In-article Ad antes de consejos -->
    <AdSenseAd 
      client:load
      ad-slot="6785803497"
      ad-type="in-article"
      container-class="in-article-ad"
    />

    <!-- Cultivation Tips -->
    <section class="cultivation-tips">
      <div class="tips-content">
        <h2 class="section-title">Consejos de Cultivo</h2>
        <div class="tips-grid">
          <div class="tip-item">
            <span class="tip-icon">🌱</span>
            <h4>Suelo Drenante</h4>
            <p>Evita encharcamientos. La mayoría prefieren suelos bien drenados y ligeramente alcalinos.</p>
          </div>
          <div class="tip-item">
            <span class="tip-icon">☀️</span>
            <h4>Exposición Solar</h4>
            <p>Muchas plantas medicinales concentran más principios activos con abundante sol.</p>
          </div>
          <div class="tip-item">
            <span class="tip-icon">✂️</span>
            <h4>Cosecha Oportuna</h4>
            <p>Recolecta en las primeras horas del día, cuando la concentración de aceites es mayor.</p>
          </div>
          <div class="tip-item">
            <span class="tip-icon">🏺</span>
            <h4>Secado Adecuado</h4>
            <p>Seca en lugares ventilados, oscuros y secos para preservar las propiedades.</p>
          </div>
        </div>
      </div>
    </section>



    <!-- CTA Section -->
    <section class="cta-section">
      <div class="cta-content">
        <h2 class="cta-title">¡Cultiva tu Farmacia Natural!</h2>
        <p class="cta-description">
          Empieza con plantas medicinales básicas y aprende gradualmente sobre sus usos 
          y propiedades. La medicina natural ha acompañado a la humanidad durante milenios.
        </p>
        <div class="cta-buttons">
          <a href="/tienda-de-semillas/" class="cta-button primary">Ver Semillas</a>
          <a href="/contacto/" class="cta-button secondary">Consultar</a>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>

