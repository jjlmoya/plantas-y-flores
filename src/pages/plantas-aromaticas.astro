---
import BaseLayout from '../layouts/BaseLayout.astro';
import PlantGrid from '../components/PlantGrid.vue';
import { getPlants } from '../utils/data.js';

// Filtrar plantas aromáticas
const allPlants = await getPlants();
const aromaticCategorySlugs = ['plantas-aromaticas', 'albahaca', 'tomillo', 'lavanda', 'manzanilla'];
const aromaticPlants = allPlants.filter(plant => 
  plant.data.categories.some(cat => {
    const slug = cat.slug || cat;
    return aromaticCategorySlugs.includes(slug);
  })
);

const plantsData = aromaticPlants.map(plant => ({
  id: plant.data.id,
  slug: plant.slug,
  title: plant.data.title,
  excerpt: plant.data.excerpt,
  date: plant.data.date,
  featured_image: plant.data.featured_image,
  main_image: plant.data.main_image,
  categories: plant.data.categories
}));

// Obtener categorías únicas de las plantas filtradas
const availableCategories = [...new Set(
  aromaticPlants.flatMap(plant => 
    plant.data.categories.map(cat => ({
      slug: cat.slug || cat,
      name: cat.name || cat
    }))
  )
)].sort((a, b) => a.name.localeCompare(b.name));
---

<BaseLayout 
  title="Plantas Aromáticas - Hierbas y Especias para tu Jardín | Plantas y Flores"
  description="Cultiva plantas aromáticas en casa: albahaca, tomillo, lavanda, manzanilla y más hierbas esenciales. Guías completas para crear tu jardín de aromáticas y especias culinarias frescas."
  type="website"
  canonical="https://plantasyflores.online/plantas-aromaticas/"
  keywords="plantas aromáticas, hierbas aromáticas, especias culinarias, albahaca, tomillo, lavanda, manzanilla, jardín de hierbas, plantas perfumadas, hierbas frescas"
  category="Plantas Aromáticas"
  tags={["plantas aromáticas", "hierbas aromáticas", "especias culinarias", "jardín de hierbas", "hierbas frescas"]}
  image="/brand/logo-200.webp"
>
  <!-- Breadcrumbs Schema -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Inicio",
        "item": "https://plantasyflores.online/"
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "Plantas Aromáticas",
        "item": "https://plantasyflores.online/plantas-aromaticas/"
      }
    ]
  })}></script>
  <div class="category-page">
    <!-- Hero Section -->
    <section class="category-hero">
      <div class="hero-content">
        <div class="hero-icon">🌿</div>
        <h1 class="hero-title">Plantas Aromáticas</h1>
        <p class="hero-subtitle">Fragancias y sabores naturales</p>
        <p class="hero-description">
          Descubre el mundo de las plantas aromáticas: desde hierbas culinarias 
          hasta plantas medicinales perfumadas. Cultiva tus propias especias 
          y disfruta de fragancias naturales en tu hogar.
        </p>
      </div>
    </section>

        <!-- Plants Grid -->
    <section class="plants-section">
      <PlantGrid 
        client:load
        plants={plantsData}
        title={`Plantas Aromáticas (${plantsData.length})`}
        description={plantsData.length > 0 ? "Todas nuestras guías para plantas aromáticas" : "Próximamente añadiremos más guías específicas para plantas aromáticas"}
      />
    </section>

    

    <!-- Categories Available -->
    {availableCategories.length > 0 && (
      <section class="categories-section">
        <h2 class="section-title">Categorías Disponibles</h2>
        <div class="categories-grid">
          {availableCategories.map(category => (
            <a href={`/${category.slug}/`} class="category-card">
              <h3 class="category-title">{category.name}</h3>
              <p class="category-count">
                {aromaticPlants.filter(plant => 
                  plant.data.categories.some(cat => (cat.slug || cat) === category.slug)
                ).length} {aromaticPlants.filter(plant => 
                  plant.data.categories.some(cat => (cat.slug || cat) === category.slug)
                ).length === 1 ? 'artículo' : 'artículos'}
              </p>
            </a>
          ))}
        </div>
      </section>
    )}


    {plantsData.length > 0 && (
      <section class="cta-section">
        <div class="cta-content">
          <h2 class="cta-title">¡Empieza tu Jardín Aromático!</h2>
          <p class="cta-description">
            Cultiva tus propias hierbas aromáticas y descubre la diferencia del sabor 
            y aroma frescos. Un pequeño jardín de hierbas transformará tu cocina.
          </p>
          <div class="cta-buttons">
            <a href="/tienda-de-semillas/" class="cta-button primary">Ver Semillas</a>
            <a href="/contacto/" class="cta-button secondary">Pedir Consejos</a>
          </div>
        </div>
      </section>
    )}
  </div>
</BaseLayout>

<style>
.category-hero {
  background: linear-gradient(135deg, #4a7c23 0%, #2d5016 100%);
