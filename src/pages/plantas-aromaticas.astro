  font-size: 2.5rem;
  font-weight: 700;
  color: #2d5016;
  text-align: center;
  margin: 0 0 3rem 0;
}

.categories-section {
  margin-bottom: 4rem;
}

.categories-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 1.5rem;
}

.category-card {
  background: white;
  padding: 2rem 1.5rem;
