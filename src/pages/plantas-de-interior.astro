    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Inicio",
        "item": "https://plantasyflores.online/"
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "Plantas de Interior",
        "item": "https://plantasyflores.online/plantas-de-interior/"
