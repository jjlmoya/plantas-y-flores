---
import BaseLayout from '../layouts/BaseLayout.astro';
import PlantGrid from '../components/PlantGrid.vue';
import { getPlants } from '../utils/data.js';

// Filtrar plantas comestibles
const allPlants = await getPlants();
const edibleCategorySlugs = ['plantas-comestibles', 'tomate', 'fresa', 'patata', 'col', 'mango', 'platano', 'pina'];
const ediblePlants = allPlants.filter(plant => 
  plant.data.categories.some(cat => {
    const slug = cat.slug || cat;
    return edibleCategorySlugs.includes(slug);
  })
);

const plantsData = ediblePlants.map(plant => ({
  id: plant.data.id,
  slug: plant.slug,
  title: plant.data.title,
  excerpt: plant.data.excerpt,
  date: plant.data.date,
  featured_image: plant.data.featured_image,
  main_image: plant.data.main_image,
  categories: plant.data.categories
}));

// Obtener categorías únicas de las plantas filtradas
const availableCategories = [...new Set(
  ediblePlants.flatMap(plant => 
    plant.data.categories.map(cat => ({
      slug: cat.slug || cat,
      name: cat.name || cat
    }))
  )
)].sort((a, b) => a.name.localeCompare(b.name));
---

<BaseLayout 
  title="Plantas Comestibles - Guía de Cultivo de Frutas y Verduras | Plantas y Flores"
  description="Aprende a cultivar tus propias plantas comestibles en casa. Guías completas de frutas, verduras y hortalizas: tomates, fresas, patatas, coles, mangos y más. Cultivo orgánico paso a paso para tu huerta casera."
  type="website"
  canonical="https://plantasyflores.online/plantas-comestibles/"
  keywords="plantas comestibles, huerta casera, cultivo orgánico, tomates, fresas, patatas, verduras, frutas, hortalizas, agricultura urbana, jardín comestible"
  category="Plantas Comestibles"
  tags={["plantas comestibles", "huerta casera", "cultivo orgánico", "verduras", "frutas", "agricultura urbana"]}
  image="/brand/logo.webp"
>
  <!-- Breadcrumbs Schema -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Inicio",
        "item": "https://plantasyflores.online/"
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "Plantas Comestibles",
        "item": "https://plantasyflores.online/plantas-comestibles/"
      }
    ]
  })}></script>
  <div class="category-page">
    <!-- Hero Section -->
    <section class="category-hero">
      <div class="hero-content">
        <div class="hero-icon">🥕</div>
        <h1 class="hero-title">Plantas Comestibles</h1>
        <p class="hero-subtitle">Cultiva tu propia comida fresca y saludable</p>
        <p class="hero-description">
          Descubre el placer de cultivar tus propias frutas, verduras y hortalizas. 
          Desde tomates jugosos hasta fresas dulces, aprende todo lo que necesitas 
          para tener una huerta productiva en casa.
        </p>
      </div>
    </section>

    <!-- Plants Grid -->
    <section class="plants-section">
      <PlantGrid 
        client:load
        plants={plantsData}
        title={`Plantas Comestibles (${plantsData.length})`}
        description={plantsData.length > 0 ? "Todas nuestras guías de cultivo para plantas comestibles" : "Próximamente añadiremos más guías de plantas comestibles"}
      />
    </section>

    {plantsData.length > 0 && (
      <section class="cta-section">
        <div class="cta-content">
          <h2 class="cta-title">¿Listo para Empezar tu Huerta?</h2>
          <p class="cta-description">
            Explora nuestras guías detalladas de cultivo y empieza a cultivar 
            tus propias plantas comestibles en casa.
          </p>
          <div class="cta-buttons">
            <a href="/tienda-de-semillas/" class="cta-button primary">Ver Semillas</a>
            <a href="/contacto/" class="cta-button secondary">Pedir Consejos</a>
          </div>
        </div>
      </section>
    )}
  </div>
</BaseLayout>

