{
  "name": "plantasyflores",
  "type": "module",
  "version": "2.52.0",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "dev": "astro dev --host --verbose",
    "build": "npm run generate-cards && astro build",
    "generate-cards": "node scripts/generate-plant-cards.js",
    "preview": "astro preview",
    "astro": "astro",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "version:bump": "node scripts/version-bump.js",
    "setup-hooks": "git config core.hooksPath .githooks && chmod +x .githooks/*",
    "postversion": "git add package.json"
  },
  "dependencies": {
    "@astrojs/vercel": "^8.2.6",
    "@astrojs/vue": "^5.1.0",
    "astro": "^5.13.3",
    "canvg": "^4.0.3",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.19.10",
    "canvas": "^3.2.0",
    "qrcode": "^1.5.4",
    "sharp": "^0.34.3",
    "typescript": "^5.9.2"
  }
}
